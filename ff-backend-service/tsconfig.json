{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "ES6"
    ],
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./typings/*",
      "node_modules/@types"
    ]
  },
  "ts-node": {
    "files": true,
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
